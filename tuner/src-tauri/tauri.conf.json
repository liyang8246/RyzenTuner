{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ryzen-tuner",
  "identifier": "com.ryzen.tuner",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm nuxt:dev",
    "beforeBuildCommand": "pnpm nuxt:build"
  },
  "app": {
    "windows": [
      {
        "title": "Ryzen Tuner",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}